edit()

rupture.scale = 0 320 px 480 px 768 px 1024 px 1224 px 1824 px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

section
  center(1824px)
aside
  col(1/3)
article
  col(2/3)
footer
  stack()

.container
  max-width: 100%
  
.row
  max-width: 100%

